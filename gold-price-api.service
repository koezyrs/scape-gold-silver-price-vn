[Unit]
Description=Gold & Silver Price Scraper API
After=network.target

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/opt/gold-price-api
Environment="PATH=/opt/gold-price-api/venv/bin"
ExecStart=/opt/gold-price-api/venv/bin/uvicorn app.main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
